    <br /><br /><br />
    <div class="container">
      <h1
        style="
          text-align: center;
          font-size: 6vh;
          background-color: #c9cbff;
          font-family: fantasy;
          color: #ffffff;
          font-weight: 700;
        "
      >
        <%= messname %>
      </h1>

      <div class="container mt-3" style="margin-bottom: 1vh;">
        <div
          class="btn-group"
          style="
            display: flex;
            justify-content: center;
            align-items: center;
            width: 100%;
          "
        >
          <a
            type="button"
            class="btn btn-primary btn-dark"
            style="font-size: 3vmin"
            href="#breakfast"
            >Breakfast</a
          >
          <a
            type="button"
            class="btn btn-primary btn-dark"
            style="font-size: 3vmin"
            href="#lunch"
            >Lunch</a
          >
          <a
            type="button"
            class="btn btn-primary btn-dark"
            style="font-size: 3vmin"
            href="#snacks"
            >Snacks</a
          >
          <a
            type="button"
            class="btn btn-primary btn-dark"
            style="font-size: 3vmin"
            href="#dinner"
            >Dinner</a
          >
          <a
            type="button"
            class="btn btn-primary btn-dark"
            style="font-size: 3vmin"
            data-bs-toggle="modal"
            data-bs-target="#myModal"
            >Contact Us</a
          >
          <a
            type="button"
            class="btn btn-primary btn-dark"
            style="font-size: 3vmin"
            data-bs-toggle="modal"
            data-bs-target="#messmenu"
            >Update Menu</a
          >
        </div>
      </div>

 

<!-- Container for all table -->
<div class="container" style="margin-bottom: 4vh">

    <div
  class="container"
  id="breakfast"
  style="
    border: 1px solid #c9cbff;
    border-radius: 1vh;
    padding: 1vh;
    border-bottom-left-radius: 0px;
    border-bottom-right-radius: 0px;
  "
>

<h2
    style="
      text-align: center;
      color: rgb(75, 14, 136);
      padding: 2vh;
      font-size: 4vh;
      font-family: cursive;
      text-decoration-color: #725b86;
    "
  >

  Breakfast(8 AM - 10 AM) 
</h2>
<table class="table table-dark table-hover">
    <thead>
      <tr>
        <th scope="col">Day</th>
        <th scope="col" colspan="2">Dishes</th>
      </tr>
    </thead>
    <tbody>
       <% for(var i = 0; i < dishes.length; i++){ %>
            <tr>
                <th scope="row"> <%= days[i] %></th>
                <td> <%= dishes[i] %> </td>
              </tr>
       <% } %>
        
    </tbody>
</table>
</div>




<!-- Container of table finishes -->
</div>
<!-- Container of whole table finishes -->









    <!-- Modal for preorder - temporary -->

    <!-- The Modal starts here-->
    <div class="modal" id="myModal">
      <div class="modal-dialog modal-md">
        <div class="modal-content">
          <!-- Modal Header -->
          <div class="modal-header">
            <h4 class="modal-title">Query related <%= messname %> & Food</h4>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
            ></button>
          </div>

          <!-- Modal body -->

          <div
            class="modal-body"
            style="
              align-items: center;
              justify-content: center;
              display: flex;
              flex-direction: column;
            "
          >
            <form>
              <input
                required
                class="container"
                type="text"
                placeholder="Roll Number"
                style="
                  border: 1px solid rgb(123, 123, 123);
                  border-radius: 0.5vh;
                  margin: 1vh 0vh;
                  padding: 1vh;
                  width: 50vmin;
                "
              /><br />
              <textarea
                required
                class="container"
                placeholder="Write your query here"
                style="
                  border: 1px solid rgb(123, 123, 123);
                  border-radius: 0.5vh;
                  padding: 1vh;
                  width: 50vmin;
                "
              ></textarea
              ><br />
              <input
                class="btn btn-primary"
                type="submit"
                name="submit"
                value="Send"
                style="width: 50vmin"
              />
              <br /><br />
              <p
                style="
                  font-size: 15px;
                  text-decoration: underline;
                  text-decoration-color: rgba(128, 128, 128, 0.671);
                "
              >
                Or
              </p>
              <a
                href="mailto:rajeshpanjiyar12@gmail.com"
                target="_blank"
                style="font-size: 18px"
              >
                Mail Us</a
              >
            </form>
          </div>

          <!-- Modal footer -->
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-danger"
              data-bs-dismiss="modal"
            >
              Close
            </button>
          </div>
        </div>
      </div>
    </div>
    <!-- Model Ends here -->



    <!-- Modal for updating menu -->
    <!-- The Modal starts here-->
    <div class="modal" id="messmenu">
      <div class="modal-dialog modal-md">
        <div class="modal-content">
          <!-- Modal Header -->
          <div class="modal-header">
            <h4 class="modal-title">Update <%= messname %> Menu</h4>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="modal"
            ></button>
          </div>

          <!-- Modal body -->

          <div
            class="modal-body"
            style="
              align-items: center;
              justify-content: center;
              display: flex;
              flex-direction: column;
            "
          >
            <form method = "post" action = "/api/mess" >
              <input
                required
                class="container"
                type="text"
                placeholder="Mess Name"
                name = "mess_name"
                style="
                  border: 1px solid rgb(123, 123, 123);
                  border-radius: 0.5vh;
                  margin: 1vh 0vh;
                  padding: 1vh;
                  width: 50vmin;
                "
              /><br />
              
              <input
                required
                class="container"
                type="text"
                placeholder="Slot"
                name = "slot"
                style="
                  border: 1px solid rgb(123, 123, 123);
                  border-radius: 0.5vh;
                  margin: 1vh 0vh;
                  padding: 1vh;
                  width: 50vmin;
                "
              /><br />
              <input
                required
                class="container"
                type="text"
                placeholder="Day"
                name = "day"
                style="
                  border: 1px solid rgb(123, 123, 123);
                  border-radius: 0.5vh;
                  margin: 1vh 0vh;
                  padding: 1vh;
                  width: 50vmin;
                "
              /><br />
              <textarea
                required
                class="container"
                placeholder="Dishes"
                name = "dishes"
                style="
                  border: 1px solid rgb(123, 123, 123);
                  border-radius: 0.5vh;
                  padding: 1vh;
                  width: 50vmin;
                  height: 15vmin;
                "
              >
              </textarea>
              <br />
              <input
                class="btn btn-primary"
                type="submit"
                name="submit"
                value="Update"
                style="width: 50vmin"
              />
              <br /><br />
              <p
                style="
                  font-size: 15px;
                  text-decoration: underline;
                  text-decoration-color: rgba(128, 128, 128, 0.671);
                "
              >
                Or
              </p>
              <a
                href="#"
                style="font-size: 18px"
              >
               Update the existing menu</a
              >
            </form>
          </div>

          <!-- Modal footer -->
          <div class="modal-footer">
            <button
              type="button"
              class="btn btn-danger"
              data-bs-dismiss="modal"
            >
              Close
            </button>
          </div>
        </div>
      </div>
    </div>
    <!-- Model Ends here -->



  </body>
</html>
